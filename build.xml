<project name="Paths" default="test" basedir=".">
  <property name="src" location="./"/>
  <property name="testBuild" location="testBuild"/>
  <target name="init">
    <tstamp/>
    <mkdir dir="${testBuild}"/>
  </target>
  <target name="compile">
    <javac
      srcdir="${src}"
      destdir="${testBuild}"
      classpath=".;junit-4.10.jar"
      includeantruntime="yes"
      />
  </target>
  <target name="runTest" depends="compile">
    <java classpath="${testBuild};junit-4.10.jar" classname="org.junit.runner.JUnitCore">
      <arg value="PathsTest"/>
    </java>
  </target>
  <target name="clean">
    <delete dir="${testBuild}"/>
  </target>
  <target name="test">
    <antcall target="init"/>
    <antcall target="runTest"/>
    <!-- <antcall target="clean"/> -->
  </target>
</project>